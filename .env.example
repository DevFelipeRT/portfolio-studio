APP_NAME="Portfolio Studio"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Locale cookie name overrides are disabled by default.
# Defaults are defined in `config/localization.php`.
# APP_SYSTEM_LOCALE_COOKIE=system_locale
# APP_PUBLIC_LOCALE_COOKIE=public_locale

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# --- Frontend dev server (Vite) ---
# Used by `vite.config.js` to configure dev server + HMR.
# Never place secrets in `VITE_*` variables: they are exposed to the browser build.
VITE_HOST=localhost
VITE_PORT=5173
VITE_BIND=0.0.0.0

# --- Logging ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- Database ---
# This project defaults to MySQL (`config/database.php`).
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# --- Session / Cache / Queue ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# --- Redis / Memcached (disabled by default) ---
# These variables do nothing unless you switch the corresponding drivers:
# - CACHE_STORE=redis
# - QUEUE_CONNECTION=redis
# - SESSION_DRIVER=redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# MEMCACHED_HOST=127.0.0.1

# --- Mail ---
#
# Production configuration depends on `MAIL_MAILER` (`config/mail.php`):
# - `smtp`: uses MAIL_HOST / MAIL_PORT / MAIL_USERNAME / MAIL_PASSWORD (and optional MAIL_SCHEME / MAIL_URL).
# - `ses`: uses AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY / AWS_DEFAULT_REGION (`config/services.php`).
# - `postmark`: uses POSTMARK_API_KEY (`config/services.php`).
# - `resend`: uses RESEND_API_KEY (`config/services.php`).
# - `sendmail`: uses MAIL_SENDMAIL_PATH.
# - `log`: writes emails to logs (recommended for local development).
#
# Contact form notifications:
# - The app sends a host notification email when a contact message is created (`app/Modules/Mail/Application/Services/MessageService.php`).
# - Notifications are disabled when MAIL_TO_ADDRESS is empty (`config/mail.php`).
#
# Local default:
MAIL_MAILER=log

# From address used for outgoing mail:
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Host recipient for contact form notifications:
MAIL_TO_ADDRESS=
MAIL_TO_NAME=

# SMTP (enable when MAIL_MAILER=smtp)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
# MAIL_SCHEME=tls
# MAIL_URL=
# MAIL_EHLO_DOMAIN=

# Postmark (enable when MAIL_MAILER=postmark)
# POSTMARK_API_KEY=

# Resend (enable when MAIL_MAILER=resend)
# RESEND_API_KEY=

# Sendmail (enable when MAIL_MAILER=sendmail)
# MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs -i"

# Log mailer (enable when MAIL_MAILER=log)
# MAIL_LOG_CHANNEL=

# --- Inertia (SSR disabled by default) ---
# INERTIA_SSR_ENABLED=false
# INERTIA_SSR_URL=http://127.0.0.1:13714
# INERTIA_SSR_ENSURE_BUNDLE_EXISTS=true
# INERTIA_ENCRYPT_HISTORY=false

# --- Rich text (Lexical JSON) ---
# Technical ceiling for serialized rich-text payloads (measured in bytes after normalization).
# This should be <= MySQL `max_allowed_packet` in your environment when persisting to JSON columns.
RICH_TEXT_MAX_PAYLOAD_BYTES=67108864

# --- AWS / S3 (disabled by default) ---
# These variables do nothing unless you switch `FILESYSTEM_DISK` to `s3` in `.env`.
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false
